<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Site Name<%= " | " + current_article.title unless current_article.nil? || "Blog" %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= partial "shared/head" %>
    
    <%= stylesheet_link_tag "app", "blog" %>
    <%= javascript_include_tag "modernizr" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= partial "shared/tag_manager" %>
    <div class="logo2"><%= link_to image_tag("logo.png", alt: ""), "/" %></div>
    <div class="off-canvas-wrap" data-offcanvas>
      <div class="inner-wrap">
        <%= partial "shared/mobile_nav" %>
        <%= partial "shared/header" %>
        
        <div class="row">
          <main class="medium-8 columns" role="main">
            <%= yield %>
          </main>
          <aside class="medium-4 columns">
            <%= partial "shared/blog_sidebar" %>
          </aside>
        </div>
        
        <%= partial "shared/footer" %>
        <a class="exit-off-canvas"></a>
      </div>
    </div>

    <%= javascript_include_tag  "all", "app" %>
  </body>
</html>